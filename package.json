{
  "name": "debt-collector",
  "version": "2.0.0",
  "description": "An action for keeping track of Technical Debt as it is created",
  "main": "lib/index.js",
  "directories": {
    "lib": "./lib",
    "doc": "./docs",
    "test": "./__tests__"
  },
  "scripts": {
    "all": "npm run build && npm run format && npm run package && npm run test",
    "build": "tsc",
    "format": "prettier-standard --write **/*.ts",
    "format-check": "prettier-standard --check **/*.ts",
    "package": "ncc build --source-map",
    "test": "jest --coverage --coverageDirectory='./' --coverageReporters=json-summary"
  },
  "jest": {
    "verbose": true,
    "clearMocks": true,
    "moduleFileExtensions": ["js", "ts"],
    "testEnvironment": "node",
    "testMatch": ["**/*.test.ts"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    }
  },
  "technical_debt": {
    "tracking": "https://github.com/teepsdonnelly/debt-collector/issues?q=in%3Atitle+is%3Aopen+debt",
    "count": "4",
    "fixed": "0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teepsdonnelly/debt-collector.git"
  },
  "keywords": [],
  "author": "Terrence Donnelly",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/teepsdonnelly/debt-collector/issues"
  },
  "homepage": "https://github.com/teepsdonnelly/debt-collector#readme",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/github": "^2.2.0"
  },
  "devDependencies": {
    "@types/jest": "^26.0.10",
    "@types/node": "^14.6.0",
    "@vercel/ncc": "^0.24.0",
    "jest": "^26.3.0",
    "jest-circus": "^26.2.2",
    "prettier-standard": "^16.4.1",
    "ts-jest": "^26.1.4",
    "typescript": "^3.9.7"
  }
}
